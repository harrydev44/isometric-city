# =============================================================================
# Supabase Configuration
# =============================================================================
# Required for multiplayer co-op mode and shared AI Civilization sync.
# Get these from your Supabase project: https://supabase.com/dashboard
#
# Without these variables, the app will run in local-only mode.

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-anon-public-key

# =============================================================================
# Setup Instructions
# =============================================================================
#
# 1. Copy this file to .env.local:
#    cp .env.example .env.local
#
# 2. Create a Supabase project at https://supabase.com
#
# 3. Get your credentials from:
#    Project Settings > API > Project URL (for SUPABASE_URL)
#    Project Settings > API > anon public key (for SUPABASE_PUBLISHABLE_KEY)
#
# 4. Run the following SQL in Supabase SQL Editor to create required tables:
#
# -- Table for multiplayer co-op rooms
# CREATE TABLE game_rooms (
#   room_code TEXT PRIMARY KEY,
#   city_name TEXT NOT NULL,
#   game_state TEXT NOT NULL,
#   created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
#   updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
#   player_count INTEGER DEFAULT 1
# );
#
# ALTER TABLE game_rooms ENABLE ROW LEVEL SECURITY;
# CREATE POLICY "Allow public access" ON game_rooms
#   FOR ALL USING (true) WITH CHECK (true);
#
# -- Table for shared AI Civilization mode
# CREATE TABLE civilization_sessions (
#   session_id TEXT PRIMARY KEY DEFAULT 'MAIN',
#   current_turn INTEGER NOT NULL DEFAULT 0,
#   turn_phase TEXT NOT NULL DEFAULT 'idle',
#   leader_id TEXT,
#   leader_heartbeat TIMESTAMP WITH TIME ZONE,
#   state_compressed TEXT NOT NULL DEFAULT '',
#   updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
#   viewer_count INTEGER DEFAULT 0
# );
#
# ALTER TABLE civilization_sessions ENABLE ROW LEVEL SECURITY;
# CREATE POLICY "Allow public access" ON civilization_sessions
#   FOR ALL USING (true) WITH CHECK (true);
#
# 5. Restart the dev server: npm run dev
